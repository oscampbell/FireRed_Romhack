Route18_EastEntrance_2F_EventScript_Haden::
	lock
	faceplayer
	goto_if_set FLAG_ALOLAN_GIFT_5, Route18_EastEntrance_2F_EventScript_Haden_Done
	msgbox Route18_EastEntrance_2F_EventScript_Haden_Intro, MSGBOX_YESNO
	goto_if_eq VAR_RESULT, NO, Route18_EastEntrance_2F_EventScript_Haden_Declined
	checkitemspace ITEM_POKE_BALL, 1
	goto_if_eq VAR_RESULT, FALSE, Route18_EastEntrance_2F_EventScript_Haden_NoRoom
	givemon SPECIES_GRIMER_ALOLA, 30
	setflag FLAG_ALOLAN_GIFT_5
	msgbox Route18_EastEntrance_2F_EventScript_Haden_Outro
	release
	end

