VermilionCity_House2_EventScript_Elyssa::
	lock
	faceplayer
	goto_if_set FLAG_ALOLAN_GIFT_3, VermilionCity_House2_EventScript_Elyssa_Done
	msgbox VermilionCity_House2_EventScript_Elyssa_Intro, MSGBOX_YESNO
	goto_if_eq VAR_RESULT, NO, VermilionCity_House2_EventScript_Elyssa_Declined
	checkitemspace ITEM_POKE_BALL, 1
	goto_if_eq VAR_RESULT, FALSE, VermilionCity_House2_EventScript_Elyssa_NoRoom
	givemon SPECIES_SANDSHREW_ALOLA, 20
	setflag FLAG_ALOLAN_GIFT_3
	msgbox VermilionCity_House2_EventScript_Elyssa_Outro
	release
	end

VermilionCity_House2_EventScript_Elyssa_Done::
	msgbox VermilionCity_House2_EventScript_Elyssa_Outro
	release
	end

